<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".ui.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/text_white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_25sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_40sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="1">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/phone_icon" />

                <com.vupadhi.heyhelp.customfonts.CustomEditTextBold
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.99"
                    android:background="@null"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_15sdp"
                    android:singleLine="true"
                    android:textColor="@color/text_white"
                    android:textColorHint="@color/text_white"
                    android:id="@+id/mobile_et"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@color/text_white" />

            <com.vupadhi.heyhelp.customfonts.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/text_white"
                android:text="We'll text a code to verify your phone." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:weightSum="1">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:padding="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/password_icon" />

                <com.vupadhi.heyhelp.customfonts.CustomEditTextBold
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.99"
                    android:background="@null"
                    android:hint="Password"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_15sdp"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:textColor="@color/text_white"
                    android:textColorHint="@color/text_white"
                    android:maxLength="10"
                    android:id="@+id/password_et"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@color/text_white" />


        </LinearLayout>

        <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
            android:id="@+id/ctvb_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_50sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:background="@drawable/login_bg"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="@color/text_black" />

        <com.vupadhi.heyhelp.customfonts.CustomTextViewSemiBold
            android:id="@+id/forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password ?"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:textColor="@color/text_white" />


    </LinearLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/text_white">

        <com.vupadhi.heyhelp.customfonts.CustomTextViewSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="@dimen/_15sdp"
            android:paddingVertical="@dimen/_14sdp"
            android:textColor="@color/text_black" />

        <com.vupadhi.heyhelp.customfonts.CustomTextViewSemiBold
            android:id="@+id/ctvsb_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/colorPrimary" />


    </LinearLayout>
</RelativeLayout>