<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/text_white"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:background="@drawable/selected_white"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"

    android:paddingTop="@dimen/_17sdp"
    android:paddingBottom="@dimen/_17sdp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.95"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
    <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Worker"
        android:textColor="@color/text_black"
        android:textSize="@dimen/_15sdp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_15sdp"
        android:id="@+id/workername_tv"/>
        <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/_5sdp"
            />
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_centerInParent="true"
        android:src="@drawable/calender_img"
        android:id="@+id/calndr_img"/>
</LinearLayout>
</LinearLayout>