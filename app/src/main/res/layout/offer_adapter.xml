<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_2sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical">

            <com.vupadhi.heyhelp.customfonts.CustomTextViewSemiBold
                android:id="@+id/main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/offer_bg"
                android:paddingHorizontal="@dimen/_15sdp"
                android:paddingVertical="@dimen/_8sdp"
                android:text="NEW CUST"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp" />

            <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
                android:id="@+id/second_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_title"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="Get Rs 500 Cashback"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_11sdp" />

            <com.vupadhi.heyhelp.customfonts.CustomTextViewSemiBold
                android:id="@+id/desc_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/second_title"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Use code for first time service only\nvalid for first 2 months only"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_10sdp" />

            <com.vupadhi.heyhelp.customfonts.CustomTextViewSemiBold
                android:id="@+id/desc_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/desc_title1"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="Use code for first time service only\nvalid for first 2 months only"
                android:textColor="@color/text_black"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical"
                tools:ignore="RtlCompat">

                <com.vupadhi.heyhelp.customfonts.CustomTextViewSemiBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@color/colorPrimary" />
            </LinearLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>