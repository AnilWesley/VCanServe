<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_white"
    tools:context=".ui.activity.Security_gaurd_screen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/security_back_but"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_3sdp"
                android:layout_gravity="center"
                android:src="@drawable/white_img"
                android:layout_marginLeft="@dimen/_15sdp"/>
            <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Security Guard"
                android:textSize="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:textColor="@color/text_white"
                android:layout_gravity="center"
                android:gravity="start"
                />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shift"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/text_black"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/day_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selected_white"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingHorizontal="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">
                        <com.vupadhi.heyhelp.customfonts.CustomTextViewSemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/text_black"
                            android:text="Day"
                            android:id="@+id/day_text"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/night_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selected_white"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingHorizontal="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">
                        <!--<de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@mipmap/ic_launcher"
                            android:layout_gravity="center"/>-->
                        <com.vupadhi.heyhelp.customfonts.CustomTextViewSemiBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/text_black"
                            android:text="Night"
                            android:id="@+id/night_text"/>
                    </LinearLayout>
                </LinearLayout>
                <!--<com.iprismtech.vcanserve.customfonts.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Elder Age"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/text_black"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"/>
                <com.iprismtech.vcanserve.customfonts.CustomEditTextBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/selected_white"
                    android:paddingVertical="@dimen/_15sdp"/>-->


                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/security_rv"
                    android:layout_marginTop="@dimen/_10sdp">

                </android.support.v7.widget.RecyclerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
                        android:layout_width="0dp"
                        android:layout_weight="0.95"
                        android:layout_height="wrap_content"
                        android:text="Writing Skills"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:textColor="@color/text_black"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13sdp"/>
                    <com.suke.widget.SwitchButton
                        android:id="@+id/switch_button_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:sb_checked="true"
                        app:sb_checked_color="@color/colorAccent"
                        app:sb_uncheck_color="@color/colorAccent"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
                        android:layout_width="0dp"
                        android:layout_weight="0.95"
                        android:layout_height="wrap_content"
                        android:text="Gate Manning"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:textColor="@color/text_black"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13sdp"/>
                    <com.suke.widget.SwitchButton
                        android:id="@+id/switch_button_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:sb_checked="true"
                        android:layout_marginLeft="10dp"
                        app:sb_checked_color="@color/colorAccent"
                        app:sb_uncheck_color="@color/colorAccent"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
                        android:layout_width="0dp"
                        android:layout_weight="0.95"
                        android:layout_height="wrap_content"
                        android:text="Patrolling"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:textColor="@color/text_black"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13sdp"/>
                    <com.suke.widget.SwitchButton
                        android:id="@+id/switch_button_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:sb_checked="true"
                        android:layout_marginLeft="10dp"
                        app:sb_checked_color="@color/colorAccent"
                        app:sb_uncheck_color="@color/colorAccent"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
                        android:layout_width="0dp"
                        android:layout_weight="0.95"
                        android:layout_height="wrap_content"
                        android:text="Fresking"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:textColor="@color/text_black"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13sdp"/>
                    <com.suke.widget.SwitchButton
                        android:id="@+id/switch_button_four"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:sb_checked="true"
                        android:layout_marginLeft="10dp"
                        app:sb_checked_color="@color/colorAccent"
                        app:sb_uncheck_color="@color/colorAccent"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
                        android:layout_width="0dp"
                        android:layout_weight="0.95"
                        android:layout_height="wrap_content"
                        android:text="Emergency Rescue Operations"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:textColor="@color/text_black"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_13sdp"/>
                    <com.suke.widget.SwitchButton
                        android:id="@+id/switch_button_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:sb_checked="true"
                        android:layout_marginLeft="10dp"
                        app:sb_checked_color="@color/colorAccent"
                        app:sb_uncheck_color="@color/colorAccent"
                        />
                </LinearLayout>


                <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other Security Guard Services"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:textSize="@dimen/_13sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/selected_white">
                    <com.vupadhi.heyhelp.customfonts.CustomEditTextBold
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="3"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="Write something here"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:id="@+id/others_et"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/security_submit_lay_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingVertical="@dimen/_11sdp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_50sdp"
                    android:background="@drawable/onboarding_text_bg"
                    android:orientation="vertical">
                    <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/_16sdp"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>