<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/text_white"
    android:layout_height="match_parent"
    tools:context=".ui.activity.Cook_screen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/cook_back_but"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/white_img"
                android:layout_marginTop="@dimen/_2sdp"
                android:padding="@dimen/_3sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_15sdp"/>
            <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cook"
                android:textSize="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:textColor="@color/text_white"
                android:layout_gravity="center"
                android:gravity="start"
                />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Food Type"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/text_black"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_15sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/veg_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selected_white"
                        android:paddingVertical="@dimen/_9sdp"
                        android:paddingHorizontal="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">
                        <com.vupadhi.heyhelp.customfonts.CustomTextViewNormal
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/text_black"
                            android:text="Veg"
                            android:id="@+id/veg_text"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/nonveg_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selected_white"
                        android:paddingVertical="@dimen/_9sdp"
                        android:paddingHorizontal="@dimen/_35sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">
                        <!--<de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@mipmap/ic_launcher"
                            android:layout_gravity="center"/>-->
                        <com.vupadhi.heyhelp.customfonts.CustomTextViewNormal
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/text_black"
                            android:text="Non-Veg"
                            android:id="@+id/nonveg_text"/>
                    </LinearLayout>
                </LinearLayout>
                <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Region"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/text_black"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_15sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/northinadian_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selected_white"
                        android:paddingVertical="@dimen/_9sdp"
                        android:paddingHorizontal="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">
                        <com.vupadhi.heyhelp.customfonts.CustomTextViewNormal
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/text_black"
                            android:text="North-Indian"
                            android:id="@+id/northindian_text"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/southindian_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selected_white"
                        android:paddingVertical="@dimen/_9sdp"
                        android:paddingHorizontal="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">
                        <!--<de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@mipmap/ic_launcher"
                            android:layout_gravity="center"/>-->
                        <com.vupadhi.heyhelp.customfonts.CustomTextViewNormal
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/text_black"
                            android:text="South-Indian"
                            android:id="@+id/southindian_text"/>
                    </LinearLayout>
                </LinearLayout>

                <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Experience"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_14sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/selected_white">
                    <com.vupadhi.heyhelp.customfonts.CustomEditTextBold
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="3"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@null"
                        android:maxLength="30"
                        android:gravity="start"
                        android:inputType="number"
                        android:singleLine="true"
                        android:hint="Enter your experience"
                        android:id="@+id/exp_et"/>
                </LinearLayout>
                <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Other Cusines"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_14sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/selected_white">
                    <com.vupadhi.heyhelp.customfonts.CustomEditTextBold
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="3"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@null"
                        android:gravity="start"
                        android:maxLength="30"
                        android:singleLine="true"
                        android:hint="Write something here"
                        android:id="@+id/cusines_et"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cook_submit_lay_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingVertical="@dimen/_11sdp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:background="@drawable/onboarding_text_bg"
                    android:orientation="vertical">
                    <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/_16sdp"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>