<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_40sdp"
        android:orientation="vertical">
        <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question 1 ?"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/text_black"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:id="@+id/question_tv"/>


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/answers_rv"
            android:layout_marginTop="@dimen/_20sdp"></android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.5"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:background="@drawable/selected_blue_line_shape"
                android:paddingVertical="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_15sdp"

                android:orientation="vertical">
                <com.vupadhi.heyhelp.customfonts.CustomTextViewNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/text_black"
                    android:text="Ans1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:background="@drawable/selected_white"
                android:paddingVertical="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:orientation="vertical">
                <com.vupadhi.heyhelp.customfonts.CustomTextViewNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/text_black"
                    android:text="Ans2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:background="@drawable/selected_white"
                android:paddingVertical="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:orientation="vertical">
                <com.vupadhi.heyhelp.customfonts.CustomTextViewNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/text_black"
                    android:text="Ans3"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>