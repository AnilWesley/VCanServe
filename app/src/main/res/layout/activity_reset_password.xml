<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    tools:context=".ui.activity.ResetPasswordActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:padding="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:src="@drawable/back_arrow" />

        <ImageView
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_140sdp"
            android:src="@drawable/reset_icon"
            android:layout_marginTop="@dimen/_45sdp"
            android:layout_gravity="center" />

        <com.vupadhi.heyhelp.customfonts.CustomTextViewSemiBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/text_white"
            android:textSize="@dimen/_18sdp"
            android:layout_marginTop="@dimen/_15sdp" />

        <com.vupadhi.heyhelp.customfonts.CustomTextViewNormal
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your new Password below !"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/text_white" />


        <LinearLayout
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:gravity="center"
            android:background="@drawable/signup_text_bg">


            <com.vupadhi.heyhelp.customfonts.CustomEditTextBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:background="@null"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/text_white"
                android:textColorHint="@color/text_white"
                android:layout_marginLeft="@dimen/_10sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:singleLine="true"
                android:maxLength="10"
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:id="@+id/password_et"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:gravity="center"
            android:background="@drawable/signup_text_bg">


            <com.vupadhi.heyhelp.customfonts.CustomEditTextBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Confirm password"
                android:background="@null"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/text_white"
                android:textColorHint="@color/text_white"
                android:layout_marginLeft="@dimen/_10sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:layout_gravity="center"
                android:singleLine="true"
                android:maxLength="10"
                android:inputType="textPassword"
                android:id="@+id/confirmpassword_et"/>
        </LinearLayout>

        <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
            android:id="@+id/ctvb_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/_70sdp"
            android:paddingVertical="@dimen/_7sdp"
            android:background="@drawable/signup_text_white_bg"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_28sdp"
            android:textColor="@color/text_black" />


    </LinearLayout>

</LinearLayout>