<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/text_white"
    tools:context=".ui.activity.DomesticHelpMaidActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/card_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        app:cardElevation="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/help_back_arrow"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_15sdp"
                android:src="@drawable/back_arrow" />

            <com.vupadhi.heyhelp.customfonts.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Domestic Help/Maid"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_15sdp"
                android:textColor="@color/text_white"
                android:textSize="@dimen/_16sdp"
                android:id="@+id/header_tv"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timings"
        android:textColor="@color/text_black"
        android:textSize="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp" />



        <RelativeLayout
            android:id="@+id/relativelayoutt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:paddingVertical="@dimen/_12sdp"
            android:paddingHorizontal="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/selected_white"
            >

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_5sdp"
                android:background="@null"
                android:hint="Select"
                style="@style/mySpinnerItemStyle"
                android:textColor="@color/text_white"
                android:textColorHint="@color/text_white"
                android:textSize="@dimen/_12sdp"
                android:visibility="invisible" />

            <com.vupadhi.heyhelp.customfonts.CustomTextViewNormal
                android:id="@+id/tv_spinnertext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_5sdp"
                android:background="@null"
                android:focusable="false"
                android:hint="Select"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/dropimg"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/_15sdp"
                android:src="@drawable/downarrow" />


        </RelativeLayout>



    <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textColor="@color/text_black"
        android:textSize="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_10sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/male_lay_out"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:background="@drawable/selected_white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/male_icon"
                android:padding="@dimen/_2sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp" />

            <com.vupadhi.heyhelp.customfonts.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:gravity="center"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/text_black"
                android:layout_gravity="center"
                android:id="@+id/male_text"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/female_lay_out"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/selected_white"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/female_icon"
                android:padding="@dimen/_2sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp" />

            <com.vupadhi.heyhelp.customfonts.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:gravity="center"
                android:textSize="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@color/text_black"
                android:layout_gravity="center"
                android:id="@+id/female_text"/>


        </LinearLayout>
    </LinearLayout>


    <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language"
        android:textColor="@color/text_black"
        android:textSize="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginHorizontal="@dimen/_10sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_12sdp">

        <LinearLayout
            android:id="@+id/linear_telugu"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_35sdp"
            android:gravity="center"
            android:background="@drawable/selected_white">

            <com.vupadhi.heyhelp.customfonts.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="తెలుగు"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/text_black"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/telugu_text"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_hindi"
            android:layout_toRightOf="@id/linear_telugu"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_35sdp"
            android:gravity="center"
            android:background="@drawable/selected_white">

            <com.vupadhi.heyhelp.customfonts.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="हिंदी"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/text_black"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/hindi_text"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_english"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@id/linear_telugu"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_35sdp"
            android:gravity="center"
            android:background="@drawable/selected_white">

            <com.vupadhi.heyhelp.customfonts.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="English"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/text_black"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/english_text"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_others"
            android:layout_toRightOf="@id/linear_english"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_35sdp"
            android:gravity="center"
            android:layout_below="@id/linear_hindi"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/selected_white">

            <com.vupadhi.heyhelp.customfonts.CustomTextViewNormal
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Others"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/text_black"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/others_text"/>

        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/help_submit_lay_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:paddingVertical="@dimen/_11sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:background="@drawable/onboarding_text_bg"
        android:weightSum="1"
        android:orientation="horizontal">
        <com.vupadhi.heyhelp.customfonts.CustomTextViewBold
            android:layout_width="0dp"
            android:layout_weight="0.65"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:gravity="end"
            android:textColor="@color/text_white"
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/right_white_img"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_2sdp"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>
</LinearLayout>